{
	"name": "Go for aks-engine",
	"image": "mcr.microsoft.com/oss/azcu/go-dev:v1.30.0",
	"extensions": [
		"ms-vscode.go"
	],
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
  "postCreateCommand": "mkdir -p /go/src/github.com/Azure && ln -sf /workspaces/aks-engine /go/src/github.com/Azure/aks-engine",
	"settings": {
		"go.gopath": "/go"
	}
}
